{
  "name": "spotify-playlist-desktop",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para gestionar playlists de Spotify",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "php -S localhost:3000 & electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.spotify-playlist.app",
    "productName": "Spotify Playlist Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
} 